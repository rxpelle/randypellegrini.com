{% block pageScript %}
<script>
  // Newsletter form UX enhancements
  const form = document.getElementById('newsletter-form');
  const submitBtn = document.getElementById('submit-btn');
  const buttonText = document.getElementById('button-text');

  // Show loading state when submitting
  form.addEventListener('submit', () => {
    submitBtn.disabled = true;
    buttonText.textContent = 'Subscribing...';
  });

  // ConvertKit's library handles the actual submission
  // Listen for ConvertKit success/error events
  if (window.ConvertkitForm) {
    window.ConvertkitForm.setOptions({
      onSuccess: () => {
        buttonText.textContent = 'Subscribed!';
        setTimeout(() => {
          submitBtn.disabled = false;
          buttonText.textContent = 'Sign up';
        }, 3000);
      },
      onError: () => {
        submitBtn.disabled = false;
        buttonText.textContent = 'Sign up';
      }
    });
  }
</script>
