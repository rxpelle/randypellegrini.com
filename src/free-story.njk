    buttonText.textContent = 'Sending...';
  });

  if (window.ConvertkitForm) {
    window.ConvertkitForm.setOptions({
      onSuccess: () => {
        buttonText.textContent = 'Check your email!';
        setTimeout(() => {
          submitBtn.disabled = false;
          buttonText.textContent = 'Send me the story';
        }, 5000);
      },
      onError: () => {
        submitBtn.disabled = false;
        buttonText.textContent = 'Send me the story';
